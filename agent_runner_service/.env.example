# Example environment variables for agent_runner_service
# Use these as a starting point and copy to .env when running locally.

# Optional: explicit database URL for the agent runner service (Postgres recommended)
# Example: postgresql+asyncpg://user:password@localhost:5433/voiceflow
AGENT_RUNNER_DATABASE_URL=

# Fallback canonical backend DB. If AGENT_RUNNER_DATABASE_URL is not set, the
# service will try BACKEND_DATABASE_URL before falling back to a local sqlite file.
BACKEND_DATABASE_URL=

# Path for Chroma DB persistence (document-ingestion default is document-ingestion/chroma_db)
# If you want to override for testing or separate environments, set a full path here.
CHROMA_PERSIST_PATH=./document-ingestion/chroma_db

# Optional: Path for ingestion temporary files/logs
INGESTION_LOG_DIR=./ingestion_logs

# Optional: API key to protect the agent-runner endpoints (not currently enforced)
AGENT_RUNNER_API_KEY=
